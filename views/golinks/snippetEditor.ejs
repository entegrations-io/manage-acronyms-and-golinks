<div class="form-group row">
  <label class="col-form-label col-sm-2" for="name">Name</label>
  <div class="col-sm-8">
    <input autofocus class="form-control" name="name" value="<%= model.name %>" required size=20 placeholder="Short name (upto 20 chars) for e.g. e"/>
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="link">Link</label>
  <div class="col-sm-8">
    <input type="url" class="form-control" name="link" value="<%= model.link %>" required size=500 placeholder="Link URL (upto 500 chars) with schema prefix like https, for e.g. https://entegrations.io"/>
  </div>
</div>
